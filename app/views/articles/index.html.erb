<h1>Article</h1>
<!--Este codigo es una mezcla entre HTML y ERB-->
<center>
	<table style="border: 1px solid black">
		<thead>
			<tr style="border: 1px solid black">
				<th style="border: 1px solid black; padding: 30px; font-size: 30px">Title</th>
				<th style="border: 1px solid black; padding: 30px; font-size: 30px">Description</th>
			</tr>
		</thead>
		<tbody>
			<% @articles.each do |article| %>
				<% unless article.archived? %>
					<tr style="border: 1px solid black">
						<td style="border: 1px solid black; padding: 30px; font-size: 30px">
								<%= link_to article.title, article %>
						</td>
						<td style="border: 1px solid black; padding: 30px; font-size: 30px">
							<%= article.body %>
						</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</center>

<% link_to "New Article", new_article_path %>
